<Window x:Class="WpfApp.MainWindow" x:Name="Self"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" x:ClassModifier="internal"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpfApp="clr-namespace:WpfApp"
        mc:Ignorable="d" d:DataContext="{d:DesignInstance wpfApp:Model}">
    
    <Control.Resources>
        <ResourceDictionary>
            <wpfApp:FooConverter x:Key="FooConverter" />
        </ResourceDictionary>
    </Control.Resources>

    <StackPanel Orientation="Vertical">
        <CheckBox IsChecked="{Binding Path=Flag}" />
        <TextBlock>Hello, world!</TextBlock>
    </StackPanel>
</Window>